{
    "version": 2,
    "builds": [
        {
            "src": "backend/src/server.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "backend/prisma/**",
                    "node_modules/prisma/**",
                    "backend/node_modules/prisma/**",
                    "node_modules/@prisma/engines/**",
                    "backend/node_modules/@prisma/engines/**"
                ]
            }
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/src/server.js"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/frontend/assets/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/index.html"
        }
    ]
}